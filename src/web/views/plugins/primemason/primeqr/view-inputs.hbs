<!-- if the user is loggedin -->
{{#if user}}
<div class="content-i">
    <div class="content-box">
        {{#if error_msg}}
        <div class="alert alert-warning" role="alert">{{error_msg}}</div>
        {{/if}}

        {{#if dataArr}}
        <div class="row">
            <div class="col-sm-12 col-xxl-12">
                <div class="alert alert-success borderless">
                    Valid PrimeQR
                </div>
            </div>
        </div>
        {{#if best_before}}
        <div class="row">
            <div class="col-sm-12 col-xxl-12">
                <div class="alert alert-danger borderless">
                    Product is past its 'best before' date.
                </div>
            </div>
        </div>
        {{/if}}
         {{#if expired}}
        <div class="row">
            <div class="col-sm-12 col-xxl-12">
                <div class="alert alert-danger borderless">
                    Product is past its 'expiry' date.
                </div>
            </div>
        </div>
        {{/if}}
        {{#if image}}
        <div class="row">
            <div class="col-sm-12 col-xxl-12">
                <div class="element-box">
                    <img id="primechainImagePreview" class='responsive-img row' alt="Image" src="{{image}}" style="height:256px;width:256px;">
                </div>
            </div>
        </div>
        {{else}}
        <div class="row">
            <div class="col-sm-12 col-xxl-12">
                <div class="element-box">
                    <img id="primechainImagePreview" class='responsive-img row' ; alt="Primechain" src="/web/img/download.png">
                </div>
            </div>
        </div>
        {{/if}}
        {{else}}
        <div class="row">
            <div class="col-sm-12 col-xxl-12">
                <div class="element-box">
                    <div class="alert alert-danger borderless">
                        Invalid PrimeQR
                    </div>
                </div>
            </div>
        </div>
        {{/if}}

        {{#if dataArr}}
            <div class="row">
                <div class="col-sm-12 col-xxl-12">
                    <div class="element-box">                        
                        <div class="pipeline-item">
                          <div class="pi-controls">
                            <div class="pi-settings os-dropdown-trigger">
                              <i class="os-icon os-icon-ui-46"></i>
                              <div class="os-dropdown">
                                <div class="icon-w">
                                  <i class="os-icon os-icon-ui-46"></i>
                                </div>
                                <ul>
                                  <li>
                                    <a href="#"><i class="os-icon os-icon-ui-49"></i><span>Edit Record</span></a>
                                  </li>
                                  <li>
                                    <a href="#"><i class="os-icon os-icon-grid-10"></i><span>Duplicate Item</span></a>
                                  </li>
                                  <li>
                                    <a href="#"><i class="os-icon os-icon-ui-15"></i><span>Remove Item</span></a>
                                  </li>
                                  <li>
                                    <a href="#"><i class="os-icon os-icon-ui-44"></i><span>Archive Project</span></a>
                                  </li>
                                </ul>
                              </div>
                            </div>
                            <div class="status status-green" data-placement="top" data-toggle="tooltip" title="" data-original-title="Active Status"></div>
                          </div>
                          <div class="pi-body">
                            <div class="pi-info">
                              <div class="h6 pi-name">
                                {{dataArr.[Product Name]}}
                              </div>
                              <div class="pi-sub">
                                Batch: {{dataArr.[Batch Number]}}
                              </div>
                              <div class="pi-sub">
                                Manufactured: {{dataArr.[Manufacturing date]}}
                              </div>
                              <div class="pi-sub">
                                Best before date: {{dataArr.[Best before date]}}
                              </div>
                              <div class="pi-sub">
                                Expiry date: {{dataArr.[Expiry date]}}
                              </div>
                            </div>
                          </div>
                          <div class="pi-foot">
                            <div class="tags">
                            {{#if dataArr.[Product URL]}}
                              <a class="tag" target="_blank" href="{{dataArr.[Product URL]}}">Website</a>
                            {{/if}}
                            {{#if dataArr.[Product usage video]}}
                              <a class="tag" target="_blank" href="{{dataArr.[Product usage video]}}">Video</a>
                            {{/if}}
                            </div>
                            <a class="extra-info" href="#"><i class="os-icon os-icon-mail-12"></i><span>8 Notes</span></a>
                            <a class="extra-info" href="#"><i class="os-icon os-icon-mail"></i><span>8 Notes</span></a>
                            <a class="extra-info" href="#"><i class="fa fa-facebook-official"></i></a>
                            <a class="extra-info" href="#"><i class="fa fa-facebook"></i></a>
                            <a class="extra-info" href="#"><i class="fa fa-instagram"></i></a>
                            <a class="extra-info" href="https://api.whatsapp.com/send?phone=+918806176284"><i class="fa fa-whatsapp"></i></a>
                            <a class="extra-info" href="#"><i class="fa fa-facebook-square"></i></a>
                          </div>
                        </div>


                    </div>
                </div>
            </div>

        {{#each inputsArr}}
        <div class="alert alert-warning" role="alert">
            <div class="row">
                <div class="col-sm-12 col-xxl-12">
                    <div class="element-box">
                        <h5 class="form-header"></h5>
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered">
                                <thead>
                                    <th style="width: 35%;">Field</th>
                                    <th style="width: 65%;">Value</th>
                                </thead>
                                {{#if this}}
                                <tbody>
                                    {{#if this.geo_latitude}}
                                    <tr>
                                        <td>Link</td>
                                        <td><a href='https://www.openstreetmap.org/#map=18/{{this.geo_latitude}}/{{this.geo_longitude}}'
                                                target="_blank">Link</a></td>
                                    </tr>
                                    {{/if}}
                                    {{#each this}}
                                    <tr>
                                        <td>{{@key}}</td>
                                        <td>{{{this}}}</td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                                {{else}}
                                <tbody>
                                    <tr>
                                        <td>{{@key}}</td>
                                        <td>{{{this}}}</td>
                                    </tr>
                                </tbody>
                                {{/if}}
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}

        <div class="alert alert-info" role="alert">
            <div class="row">
                <div class="col-sm-12 col-xxl-12">
                    <div class="element-box">
                        <form id="formValidate" action="/plugins/primemason/primeqr/add-inputs" method="post">
                            <input type="hidden" name="uuid" value="{{uuid}}">
                            <input type="hidden" name="geo_latitude" id="geo_latitude" value="">
                            <input type="hidden" name="geo_longitude" id="geo_longitude" value="">
                            <fieldset class="form-group">

                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label for="">Add comments *</label>
                                            <input class="form-control" data-error="This field is compulsory"
                                                id="Comments" name="Comments" required="required" type="text" value="">
                                            <div class="help-block form-text with-errors form-control-feedback">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                            <div class="form-buttons-w">
                                <button type="submit" class="btn btn-primary"> Add</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
</div>
{{/if}}
</div>
</div>
<!-- if the user is not loggedin -->
{{else}}
<div class="layout-w">
    <div class="menu-mobile menu-activated-on-click color-scheme-dark">
        <div class="mm-logo-buttons-w">
            <a class="mm-logo" href="#"><img src="/web/img/logo.png"><span>Primechain</span></a>
            <div class="mm-buttons">
                <div class="mobile-menu-trigger">
                    <div class=""></div>
                </div>
            </div>
        </div>
    </div>
    <div
        class="menu-w color-scheme-light color-style-transparent menu-position-side menu-side-left menu-layout-compact sub-menu-style-over sub-menu-color-bright selected-menu-color-light menu-activated-on-hover menu-has-selected-link">
        <div class="logo-w" style="background-color:#1b55e2;">
            <a class="logo" href="#">
                <div class="logo-element"></div>
                <div class="logo-label" style="color: #ffff">Primechain</div>
            </a>
        </div>
    </div>

    <div class="all-wrapper with-side-panel solid-bg-all">
        <div class="layout-w">
            <div class="content-i">
                <div class="content-box">
                    {{#if error_msg}}
                    <div class="alert alert-warning" role="alert">{{error_msg}}</div>
                    {{/if}}

                    {{#if dataArr}}
                    <div class="row" id="uploadDaveStatus">
                        <div class="col-sm-12 col-xxl-12">
                            <div class="element-box">
                                <h5 class="form-header" id="uploadingDaveHeader">Record retrieved successfully. </h5>
                                <hr>
                                <table class="table table-striped" style="width: 100%">
                                    <thead>
                                        <th style="width: 90%;">Action</th>
                                        <th style="width: 10%;">Status</th>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>Record retrieved successfully.</td>
                                            <td>
                                                <i id="doc_hash" class="fa fa-check"
                                                    style="font-size:16px;color:green; align: center;"></i>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    {{else}}
                    <div class="row">
                        <div class="col-sm-12 col-xxl-12">
                            <div class="element-box">
                                <h5 class="form-header" id="uploadingDaveHeader">Failed to retrieve record.</h5>
                                <hr>
                                <table class="table table-striped" style="width: 100%">
                                    <thead>
                                        <th style="width: 90%;">Action</th>
                                        <th style="width: 10%;">Status</th>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>Failed to retrieve record.</td>
                                            <td>
                                                <i id="doc_hash" class="fa fa-times"
                                                    style="font-size:16px;color:red; align: center;"></i>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    {{/if}}

                    {{#if dataArr}}
                    <div class="alert alert-info" role="alert">
                        <div class="row">
                            <div class="col-sm-12 col-xxl-12">
                                <div class="element-box">
                                    <h5 class="form-header">Record details</h5>
                                    <hr>
                                    <table class=' table table-striped' style="width: 100%">
                                        <thead>
                                            <th style="width: 35%;">Field</th>
                                            <th style="width: 65%;">Value</th>
                                        </thead>

                                        <tbody>
                                            {{#if image}}
                                            <tr>
                                                <td>Image</td>
                                                <td><img id="primechainImagePreview" class='responsive-img row'
                                                        onerror="this.src='/web/img/buddha.jpg';" ; alt="Image"
                                                        src="{{image}}"
                                                        style="width:128px;height:128px; margin-left: 10px;"></td>
                                            </tr>
                                            {{/if}}
                                            {{#each dataArr}}
                                            <tr>
                                                <td>{{@key}}</td>
                                                <td>{{{this}}}</td>
                                            </tr>
                                            {{/each}}
                                        </tbody>

                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{#each inputsArr}}
                    <div class="alert alert-warning" role="alert">
                        <div class="row">
                            <div class="col-sm-12 col-xxl-12">
                                <div class="element-box">
                                    <h5 class="form-header"></h5>
                                    <div class="table-responsive">
                                        <table class="table table-striped table-bordered">
                                            <thead>
                                                <th style="width: 35%;">Field</th>
                                                <th style="width: 65%;">Value</th>
                                            </thead>
                                            {{#if this}}
                                            <tbody>
                                                {{#if this.geo_latitude}}
                                                <tr>
                                                    <td>Link</td>
                                                    <td><a href='https://www.openstreetmap.org/#map=18/{{this.geo_latitude}}/{{this.geo_longitude}}'
                                                            target="_blank">Link</a></td>
                                                </tr>
                                                {{/if}}
                                                {{#each this}}
                                                <tr>
                                                    <td>{{@key}}</td>
                                                    <td>{{{this}}}</td>
                                                </tr>
                                                {{/each}}
                                            </tbody>
                                            {{else}}
                                            <tbody>
                                                <tr>
                                                    <td>{{@key}}</td>
                                                    <td>{{{this}}}</td>
                                                </tr>
                                            </tbody>
                                            {{/if}}
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}

                    <div class="alert alert-info" role="alert">
                        <div class="row">
                            <div class="col-sm-12 col-xxl-12">
                                <div class="element-box">
                                    <form id="formValidate" action="/plugins/primemason/primeqr/add-inputs"
                                        method="post">
                                        <input type="hidden" name="uuid" value="{{uuid}}">
                                        <input type="hidden" name="geo_latitude" id="geo_latitude" value="">
                                        <input type="hidden" name="geo_longitude" id="geo_longitude" value="">
                                        <fieldset class="form-group">
                                            <div class="row">
                                                <div class="col-sm-6">
                                                    <div class="form-group">
                                                        <label for="">Add comments</label>
                                                        <input class="form-control"
                                                            data-error="This field is compulsory" id="Comments"
                                                            name="Comments" required="required" type="text" value="">
                                                        <div
                                                            class="help-block form-text with-errors form-control-feedback">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </fieldset>
                                        <div class="form-buttons-w">
                                            <button type="submit" class="btn btn-primary"> Add</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>
{{/if}}