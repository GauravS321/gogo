<!-- if the user is loggedin -->
{{#if user}}
<div class="content-i">
    <div class="content-box">
        {{#if error_msg}}
        <div class="alert alert-warning" role="alert">{{error_msg}}</div>
        {{/if}}

        {{#if dataArr}}
        <div class="row">
            <div class="col-sm-12 col-xxl-12">
                <div class="alert alert-success borderless">
                    Valid PrimeQR
                </div>
            </div>
        </div>
            {{#if image}}
            <div class="row">
                <div class="col-sm-12 col-xxl-12">
                    <div class="element-box">
                        <img id="primechainImagePreview" class='responsive-img row' ; alt="" src="{{image}}" style="width:128px;height:128px; margin-left: 10px;">
                    </div>
                </div>
            </div>
            {{else}}
            <div class="row">
                <div class="col-sm-12 col-xxl-12">
                    <div class="element-box">
                        <img id="primechainImagePreview" class='responsive-img row' ; alt="Primechain" src="/web/img/download.png" style="text-align:center">
                    </div>
                </div>
            </div>

            {{/if}}
        {{else}}
        <div class="row">
            <div class="col-sm-12 col-xxl-12">
                <div class="element-box">
                    <div class="alert alert-danger borderless">
                        Invalid PrimeQR
                    </div>
                </div>
            </div>
        </div>
        {{/if}}

        {{#if dataArr}}
        <div class="alert alert-info" role="alert">
            <div class="row">
                <div class="col-sm-12 col-xxl-12">
                    <div class="element-box">
                        <h5 class="form-header">Record details</h5>
                        <hr>
                        <div class="post-box">
                            <div class="post-media" style="background-image: url(img/portfolio1.jpg)"></div>
                            <div class="post-content">
                              <h6 class="post-title">
                                Is Crypto the Future of Film Funding?
                              </h6>
                              <div class="post-text">
                                Curiously, view both tone emerged. There should which yards two and concepts amidst liabilities sitting of and, parents it wait 
                              </div>
                              <div class="post-foot">
                                <div class="post-tags">
                                  <div class="badge badge-primary">
                                    BTC
                                  </div>
                                  <div class="badge badge-primary">
                                    Crypto
                                  </div>
                                </div>
                                <a class="post-link" href="#"><span>Read Full Story</span><i class="os-icon os-icon-arrow-right7"></i></a>
                              </div>
                            </div>
                          </div>
                    </div>
                </div>
            </div>
        </div>

        {{#each inputsArr}}
        <div class="alert alert-warning" role="alert">
            <div class="row">
                <div class="col-sm-12 col-xxl-12">
                    <div class="element-box">
                        <h5 class="form-header"></h5>
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered">
                                <thead>
                                    <th style="width: 35%;">Field</th>
                                    <th style="width: 65%;">Value</th>
                                </thead>
                                {{#if this}}
                                <tbody>
                                    {{#if this.geo_latitude}}
                                    <tr>
                                        <td>Link</td>
                                        <td><a href='https://www.openstreetmap.org/#map=18/{{this.geo_latitude}}/{{this.geo_longitude}}'
                                                target="_blank">Link</a></td>
                                    </tr>
                                    {{/if}}
                                    {{#each this}}
                                    <tr>
                                        <td>{{@key}}</td>
                                        <td>{{{this}}}</td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                                {{else}}
                                <tbody>
                                    <tr>
                                        <td>{{@key}}</td>
                                        <td>{{{this}}}</td>
                                    </tr>
                                </tbody>
                                {{/if}}
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}

        <div class="alert alert-info" role="alert">
            <div class="row">
                <div class="col-sm-12 col-xxl-12">
                    <div class="element-box">
                        <form id="formValidate" action="/plugins/primemason/primeqr/add-inputs" method="post">
                            <input type="hidden" name="uuid" value="{{uuid}}">
                            <input type="hidden" name="geo_latitude" id="geo_latitude" value="">
                            <input type="hidden" name="geo_longitude" id="geo_longitude" value="">
                            <fieldset class="form-group">

                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label for="">Add comments *</label>
                                            <input class="form-control" data-error="This field is compulsory"
                                                id="Comments" name="Comments" required="required" type="text" value="">
                                            <div class="help-block form-text with-errors form-control-feedback">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                            <div class="form-buttons-w">
                                <button type="submit" class="btn btn-primary"> Add</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
</div>
{{/if}}
</div>
</div>
<!-- if the user is not loggedin -->
