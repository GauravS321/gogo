<div class="content-i">
    <div class="content-box">
        <div class="element-wrapper">
            <h6 class="element-header">Manage permits</h6>
            {{#if success_msg}}
            <div class="alert alert-success" role="alert">{{success_msg}}</div>
            {{/if}}
            {{#if error_msg}}
            <div class="alert alert-danger" role="alert">{{error_msg}}</div>
            {{/if}}
            <div class="element-box">
                <div class="row">
                    <div class="col-md-12">
                        <h5 class="form-header">Manage permits</h5>
                    </div>
                </div>
                <hr>
                <div class="table-responsive">
                    <div class="row">
                        <div class="col-sm-12">
                            <table id="dataTable1" width="100%" class="table table-striped table-lightfont dataTable">
                                <thead>
                                    <tr>
                                        <th>UUID</th>
                                        <th>Shop Name</th>
                                        <th>Add</th>
                                        <th>View</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#if dataArr}} {{#each dataArr}}
                                    <tr>
                                        <td>{{uuid}}</td>
                                        <td>{{ShopName}}</td>
                                        <td>
                                            <div class="md4">
                                                <form id="addForm#{{uuid}}" action="/plugins/primemason/shoppermits/add-permits" method="GET">
                                                    <input type="hidden" name="uuid" value="{{uuid}}">
                                                </form>
                                                <button class="btn btn-primary"
                                                    onclick="document.getElementById('addForm#{{uuid}}').submit();">Add</button>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="md4">
                                                <form id="viewForm#{{uuid}}" action="/plugins/primemason/shoppermits/view" method="GET" target="_blank">
                                                    <input type="hidden" name="uuid" value="{{uuid}}">
                                                </form>
                                                <button class="btn btn-success"
                                                    onclick="document.getElementById('viewForm#{{uuid}}').submit();">View</button>
                                            </div>
                                        </td>
                                          
                                    </tr>
                                    {{/each}} {{/if}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>