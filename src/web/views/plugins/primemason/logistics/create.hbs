<!-- BEGIN Content-->
<div class="content-i">
  <div class="content-box">
    {{#if success_msg}}
    <div class="alert alert-success" role="alert">{{success_msg}}</div>
    {{/if}}
    {{#if error_msg}}
    <div class="alert alert-warning" role="alert">{{error_msg}}</div>
    {{/if}}

    <div class="element-box">
      <div class="row">
        <div class="col-sm-12 col-xxl-12">
          <h5 class="form-header">
            Create Logistics Record
          </h5>
          <hr>
        </div>
      </div>

      <form id="formValidate" action="/plugins/primemason/logistics/create" method="post" enctype="multipart/form-data">

        <fieldset class="form-group">
          <legend>
            <span>Product photo *</span>
          </legend>

          <div class="row">
            <div class="col-sm-6">
              <div class="form-group">
                <input class="form-control" type="file" id="primechainImage" name="primechainImages"
                  required="required">
                {{!-- <img id="primechainImagePreview" class='responsive-img' src=""
                                    style="height:256px;width:256px;padding-top:25px;display:none;"> --}}
                <div class="help-block form-text with-errors form-control-feedback"></div>
              </div>
              <div class="help-block form-text text-muted form-control-feedback">
                Supported image types are jpg, png.
              </div>
            </div>
            <div class="col-sm-6">
              <img id="primechainImagePreview" class='responsive-img' src=""
                style="height:128px;width:128px;display:none;">
            </div>
        </fieldset>

        <fieldset class="form-group">
          <legend><span>Primary information</span></legend>
          <div class="row">
            <div class="col-sm-6">
              <div class="form-group">
                <label for="">Product Name *</label>
                <input class="form-control" data-error="This field is compulsory" id="Product Name" name="Product Name"
                  required="required" type="text" value="">
                <div class="help-block form-text with-errors form-control-feedback"></div>
              </div>
            </div>
            <div class="col-sm-6">
              <div class="form-group">
                <label for="">Batch Number *</label>
                <input class="form-control" data-error="This field is compulsory" id="Batch Number" name="Batch Number"
                  required="required" type="text" value="">
                <div class="help-block form-text with-errors form-control-feedback"></div>
              </div>
            </div>
          </div>
        </fieldset>

        <fieldset class="form-group">
          <legend><span>Dates</span></legend>
          <div class="row">
            <div class="col-sm-6">
              <div class="form-group">
                <label for="">Manufacturing date *</label>
                <input class="form-control" data-error="This field is compulsory" id="Manufacturing date"
                  name="Manufacturing date" required="required" type="date" value="">
                <div class="help-block form-text with-errors form-control-feedback"></div>
              </div>
            </div>
            <div class="col-sm-6">
              <div class="form-group">
                <label for="">Expiry date *</label>
                <input class="form-control" data-error="This field is compulsory" id="Expiry date" name="Expiry date"
                  required="required" type="date" value="">
                <div class="help-block form-text with-errors form-control-feedback"></div>
              </div>
            </div>
          </div>
        </fieldset>

        <div class="form-buttons-w">
          <button type="submit" class="btn btn-primary"> Create</button>
        </div>
      </form>
    </div>
  </div>
</div>
<!-- END Content-->