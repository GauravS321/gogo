<div class="content-i">
    <div class="content-box">
        <div class="all-wrapper menu-side with-pattern" style="padding-top: 8%;">
            <div class="auth-box-w" style="padding-top:3%">
                <h4 class="auth-header" style="text-align:center; padding-right: 15%;">
                    Lost Password <br>
                    <span style="font-weight: 250; color: #868686;font-size: 15px; max-width:700px;">Enter your email
                        address
                        to reset password</span>
                </h4>
                {{#if error_msg}}
                <div class="alert alert-danger" style="margin: 0px 30px 0px" role="alert">{{error_msg}}</div>
                {{/if}}
                <form id="formValidate" novalidate="true" action="/lost-password" method="POST"
                    onsubmit="this.form.disabled=true">
                    <div class="form-group">
                        <label for="">Email Address</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text os-icon os-icon-mail"></div>
                            </div>
                            <input class="form-control" data-error="Email address is invalid"
                                placeholder="Email address" type="email" name="email" required="required">
                        </div>
                        <div class="help-block form-text with-errors form-control-feedback"></div>
                    </div>

                    <div class="buttons-w">
                        <button class="btn btn-primary btn-block btn-lg" type="submit">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>