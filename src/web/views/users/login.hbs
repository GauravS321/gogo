<body class="auth-wrapper">
    <div class="all-wrapper menu-side with-pattern">
      <div class="auth-box-w">
        <div class="logo-w">
          <a href="/"><img alt="" src="/web/img/logo-big.png"></a>
        </div>
        <h4 class="auth-header">
          Login to Primechain
        </h4>
            {{#if success_msg}}
            {{message}}
            <div class="alert alert-info" style="margin: 0px 15px 10px" role="alert">{{success_msg}}</div>
            {{/if}}
            {{#if error_msg}}
            <div class="alert alert-danger" style="margin: 0px 15px 0px" role="alert">{{error_msg}}</div>
            {{/if}}
            {{#if errors}}{{#each errors}}
            <div class="alert alert-danger" style="margin: 0px 15px 0px" role="alert">{{msg}}</div>
            {{/each}} {{/if}}
        <form id="formValidate" novalidate="true" action="/login" method="POST" onsubmit="login.disabled=true">
          <div class="form-group">
            <label for="">Email</label><input class="form-control" placeholder="Enter your email address" type="email" name="email">
            <div class="pre-icon os-icon os-icon-mail"></div>
          </div>
          <div class="form-group">
            <label for="">Password</label><input class="form-control" placeholder="Enter your password" type="password" name="password">
            <div class="pre-icon os-icon os-icon-fingerprint"></div>
          </div>
          <div class="buttons-w">
            <button class="btn btn-primary">Log me in</button>
            <div class="form-check-inline">
              <label class="form-check-label"><a href="/lost-password">Lost Password?</a></label>
            </div>
            <div class="form-check-inline" style="align: center ;margin-top: 25px;">
                <label class="form-check-label">
                    <a href="/signup">Don't have an account? Sign up</a>
                </label>
            </div>
            <hr/>
            <div class="el-buttons-list">
                <a class="btn btn-default btn-lg" href="/auth/google" style="font-size: larger;">
                    <i class="fa fa-google"></i>
                    <span style=" padding:0 10px 0 10px">Login using Google</span>
                </a>
                <br>
                <a class="btn btn-primary btn-lg" href="/auth/facebook" style="font-size: larger;">
                    <i class="fa fa-facebook"></i>
                    <span style=" padding:0 10px 0 10px">Login using Facebook</span>
                </a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </body>