<div class="content-i">
    <div class="content-box">
        {{#if success_msg}}
        <div class="alert alert-success" role="alert">{{success_msg}}</div>
        {{/if}} {{#if error_msg}}
        <div class="alert alert-warning" role="alert">{{error_msg}}</div>
        {{/if}} {{#if error}}
        <div class="alert alert-danger" role="alert">{{error}}</div>
        {{/if}}
        <div class="element-wrapper">
            <h6 class="element-header">Manage permissions</h6>
            <div class="element-box">
                <h5 class="form-header">Manage permissions</h5>
                <hr>
                <strong>Name: {{user_name}}</strong>
                <br>
                <strong>Email: {{user_email}}</strong>
                <br>
                <strong>Role: {{user_role}}</strong>
                <hr>
                <div class="table-responsive">
                    <table id="example23" class="display nowrap table table-hover table-striped table-bordered"
                        cellspacing="0" width="100%">
                        <thead>
                            <tr role="row">
                                <th>Name</th>
                                <th>Description</th>
                                <th class="text-center">Actions</th>
                        </thead>

                        <tbody>
                            {{#if list_permissions}}
                            <tr>
                                <td>connect</td>
                                <td> connect to other nodes and see the blockchain's contents</td>
                                <td class="row-actions">
                                    <div class="buttons-w">
                                        {{#if list_permissions.connect}}
                                        <input type="hidden" id="primechain_address" value="{{primechain_address}}">
                                        <input id="connect" type="submit" class="btn btn-danger btn-md" value="Revoke"
                                            onclick="revoke(this)">
                                        {{else}}
                                        <input type="hidden" id="primechain_address" value="{{primechain_address}}">
                                        <input id="connect" type="submit" class="btn btn-success btn-md" value="Grant"
                                            onclick="grant(this)">
                                        {{/if}}
                                    </div>
                                </td>
                            </tr>

                            <tr>
                                <td>send</td>
                                <td>send assets to other entities</td>
                                <td class="row-actions">
                                    <div class="buttons-w">
                                        {{#if list_permissions.send}}
                                        <input type="hidden" id="primechain_address" value="{{primechain_address}}">
                                        <input id="send" type="submit" class="btn btn-danger btn-md" value="Revoke"
                                            onclick="revoke(this)">
                                        {{else}}
                                        <input type="hidden" id="primechain_address" value="{{primechain_address}}">
                                        <input id="send" type="submit" class="btn btn-success btn-md" value="Grant"
                                            onclick="grant(this)">
                                        {{/if}}
                                    </div>
                                </td>
                            </tr>

                            <tr>
                                <td>receive</td>
                                <td>receive assets from other entities</td>
                                <td class="row-actions">
                                    <div class="buttons-w">
                                        {{#if list_permissions.receive}}
                                        <input type="hidden" id="primechain_address" value="{{primechain_address}}">
                                        <input id="receive" type="submit" class="btn btn-danger btn-md" value="Revoke"
                                            onclick="revoke(this)">
                                        {{else}}
                                        <input type="hidden" id="primechain_address" value="{{primechain_address}}">
                                        <input id="receive" type="submit" class="btn btn-success btn-md" value="Grant"
                                            onclick="grant(this)">
                                        {{/if}}
                                    </div>
                                </td>
                            </tr>

                            <tr>
                                <td>issue</td>
                                <td>issue new assets</td>
                                <td class="row-actions">
                                    {{#if list_permissions.issue}}
                                    <input type="hidden" id="primechain_address" value="{{primechain_address}}">
                                    <input id="issue" type="submit" class="btn btn-danger btn-md" value="Revoke"
                                        onclick="revoke(this)">
                                    {{else}}
                                    <input type="hidden" id="primechain_address" value="{{primechain_address}}">
                                    <input id="issue" type="submit" class="btn btn-success btn-md" value="Grant"
                                        onclick="grant(this)">
                                    {{/if}}
                                </td>
                            </tr>

                            <tr>
                                <td>create</td>
                                <td>create data channels</td>
                                <td class="row-actions">
                                    {{#if list_permissions.create}}
                                    <input type="hidden" id="primechain_address" value="{{primechain_address}}">
                                    <input id="create" type="submit" class="btn btn-danger btn-md" value="Revoke"
                                        onclick="revoke(this)">
                                    {{else}}
                                    <input type="hidden" id="primechain_address" value="{{primechain_address}}">
                                    <input id="create" type="submit" class="btn btn-success btn-md" value="Grant"
                                        onclick="grant(this)">
                                    {{/if}}
                                </td>
                            </tr>

                            <tr>
                                <td>mine</td>
                                <td>mine blocks</td>
                                <td class="row-actions">
                                    {{#if list_permissions.mine}}
                                    <input type="hidden" id="primechain_address" value="{{primechain_address}}">
                                    <input id="mine" type="submit" class="btn btn-danger btn-md" value="Revoke"
                                        onclick="revoke(this)">
                                    {{else}}
                                    <input type="hidden" id="primechain_address" value="{{primechain_address}}">
                                    <input id="mine" type="submit" class="btn btn-success btn-md" value="Grant"
                                        onclick="grant(this)">
                                    {{/if}}
                                </td>
                            </tr>

                            <tr>
                                <td>activate</td>
                                <td>change connect, send and receive permissions for other entities</td>
                                <td class="row-actions">
                                    {{#if list_permissions.activate}}
                                    <input type="hidden" id="primechain_address" value="{{primechain_address}}">
                                    <input id="activate" type="submit" class="btn btn-danger btn-md" value="Revoke"
                                        onclick="revoke(this)">
                                    {{else}}
                                    <input type="hidden" id="primechain_address" value="{{primechain_address}}">
                                    <input id="activate" type="submit" class="btn btn-success btn-md" value="Grant"
                                        onclick="grant(this)">
                                    {{/if}}
                                </td>
                            </tr>

                            <tr>
                                <td>admin</td>
                                <td>change all permissions for other entities, including issue, mine, activate
                                    and admin</td>
                                <td class="row-actions">
                                    {{#if list_permissions.admin}}
                                    <input type="hidden" id="primechain_address" value="{{primechain_address}}">
                                    <input id="admin" type="submit" class="btn btn-danger btn-md" value="Revoke"
                                        onclick="revoke(this)">
                                    {{else}}
                                    <input type="hidden" id="primechain_address" value="{{primechain_address}}">
                                    <input id="admin" type="submit" class="btn btn-success btn-md" value="Grant"
                                        onclick="grant(this)">
                                    {{/if}}
                                </td>
                            </tr>
                            {{/if}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>