<div class="content-i">
    <div class="content-box">
        <div class="row">
            <div class="col-sm-12 col-xxl-12">
                <div class="element-box">
                    <h5 class="form-header">Blockchain peer info</h5>
                    <hr>
                    <br>

                    {{#if peerinfo}}
                    <div class="table-responsive">
                        <table id="dataTable1" class="table table-striped table-lightfont"
                            style="table-layout: fixed; width: 100%">
                            <thead>
                                <tr>
                                    <th>IP address</th>
                                    <th>Version</th>
                                    <th>Sub-version</th>
                                    <th>handshakelocal</th>
                                    <th>handshake</th>
                                </tr>
                            </thead>

                            <tbody>
                                {{#if peerinfo}}{{#each peerinfo}}
                                <tr>
                                    <td style="word-wrap: break-word">{{addr}}</td>
                                    <td style="word-wrap: break-word">{{version}}</td>
                                    <td style="word-wrap: break-word">{{subver}}</td>
                                    <td style="word-wrap: break-word">{{handshakelocal}}</td>
                                    <td style="word-wrap: break-word">{{handshake}}</td>
                                </tr>
                                {{/each}} {{/if}}
                            </tbody>
                        </table>
                    </div>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>