<div class="content-i">
    <div class="content-box">
        {{#if success_msg}}
        <div class="alert alert-info" role="alert">{{success_msg}}</div>
        {{/if}} {{#if error_msg}}
        <div class="alert alert-warning" role="alert">{{error_msg}}</div>
        {{/if}} {{#if error}}
        <div class="alert alert-danger" role="alert">{{error}}</div>
        {{/if}}
        <div class="element-box">
            <h5 class="form-header">View</h5>
            <hr>
            <div class="table-responsive">
                <table id="dataTable1" width="100%" class="table table-striped table-lightfont dataTable">
                    <thead>
                        <tr>
                            <th>id</th>
                            <th>value1</th>
                            <th>value2</th>
                            <th>value3</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#if dataArr}} {{#each dataArr}}
                        <tr>
                            <td>{{id}}</td>
                            <td>{{value1}}</td>
                            <td>{{value2}}</td>
                            <td>{{value3}}</td>
                            <td>
                                <form action="">
                                    <button formaction='view/{{id}}' class="btn btn-md btn-primary">View</button>
                                    <button formaction='edit/{{id}}' class="btn btn-md btn-warning">Edit</button>
                                    <button formaction='delete/{{id}}' class="btn btn-md btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                        {{/each}} {{/if}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>