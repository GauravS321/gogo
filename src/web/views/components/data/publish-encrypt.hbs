<div class="content-i">
    <div class="content-box" style="padding-bottom: 380px;">
        <div class="element-box">
            <h5 class="form-header"> Encrypt, sign and upload data to the blockchain</h5>
            <hr>

            <form id="formValidate">
                <legend>
                    <span>Data to be encrypted, signed and uploaded to the blockchain *</span>
                </legend>

                <div class="form-group">
                    <textarea class="form-control" id="data" name="data" rows="8" data-error="This field is compulsory"
                        required="required">I fear not the man who has practiced 10,000 kicks once, but I fear the man who has practiced one kick 10,000 times.</textarea>

                    <div class="help-block form-text text-muted form-control-feedback">
                    </div>

                    <div class="help-block form-text with-errors form-control-feedback"></div>
                </div>

                <legend>
                    <span>Data channel name *</span>
                </legend>

                <div class="form-group">
                    <input class="form-control" id="stream_name" data-error="This field is compulsory"
                        required="required" value="DATA_MASTERLIST">

                    <div class="help-block form-text text-muted form-control-feedback">
                    </div>

                    <div class="help-block form-text with-errors form-control-feedback"></div>
                </div>


                <div class="form-buttons-w">
                    <button class="btn btn-primary" id="encryptSignStoreData"> Submit</button>
                </div>

            </form>
        </div>

        <div class="row" id="encryptSignStoreDataStatus" style="display: none;">
            <div class="col-sm-12 col-xxl-12">
                <div class="element-box">
                    <div id="grant_info"></div>
                    <table class="table table-striped" style="table-layout: fixed; width: 100%">
                        <thead>
                            <th width='30%'>Parameter</th>
                            <th width='70%'>Value</th>
                        </thead>
                        <tbody>
                            <tr>
                                <td>TX ID of data</td>
                                <td id="td1" style="word-wrap: break-word"></td>
                            </tr>
                            <tr>
                                <td>TX ID of signature</td>
                                <td id="td2" style="word-wrap: break-word"></td>
                            </tr>
                            <tr>
                                <td>e-Signature</td>
                                <td id="td3" style="word-wrap: break-word"></td>
                            </tr>
                            <tr>
                                <td>AES password</td>
                                <td id="td4" style="word-wrap: break-word"></td>
                            </tr>
                            <tr>
                                <td>AES Initialization Vector (IV))</td>
                                <td id="td5" style="word-wrap: break-word"></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>